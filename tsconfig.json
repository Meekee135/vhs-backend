{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "paths": {
            "config": ["config"],
            "database/*": ["database/*"],
            "gateway/*": ["gateway/*"],
            "services/*": ["services/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
